<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c"
    tools:context="com.example.goaltechnologies.educationapp.StudentReg">

    <TextView
        android:text="Student Registration"
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText12"
        android:textStyle="normal|bold"
        android:textColor="@color/colorred"
        android:textColorHint="@color/colorred"
        android:hint="Name"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/editText8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="@color/colorred"
        android:textColorHint="@color/colorred"
        android:id="@+id/editText13"
        android:hint="Password"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/editText12"
        android:layout_alignStart="@+id/editText12" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:layout_above="@+id/textView88"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText15"
        android:hint="Class"
        android:textColor="@color/colorred"
        android:textColorHint="@color/colorred"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:layout_below="@+id/editText14"
        android:layout_alignStart="@+id/editText14" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText14"
        android:hint="abc@gmail.com"
        android:textColor="@color/colorred"
        android:textColorHint="@color/colorred"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:layout_below="@+id/editText13"
        android:layout_alignStart="@+id/editText13" />

    <TextView
        android:text="Already Registed? Go Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView88"
        android:textColor="@color/colorred"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Mobile Number"
        android:textColor="@color/colorred"
        android:textColorHint="@color/colorred"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/editText15"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter School Address"
        android:textColor="@color/colorred"
        android:textColorHint="@color/colorred"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:inputType="textPostalAddress"
        android:layout_above="@+id/button16"
        android:layout_alignStart="@+id/editText8"
        android:layout_marginBottom="22dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="14dp" />
</RelativeLayout>
