<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/s"
    tools:context="com.example.goaltechnologies.educationapp.EmpPage">
    <ListView android:id="@+id/SMSList1"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:textColor="@android:color/white"
        android:cacheColorHint="@android:color/background_light"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/SMSList1"
        android:layout_marginTop="26dp"
   />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/SMSList1"
        android:layout_marginEnd="37dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SMSList1"
        android:layout_alignEnd="@+id/SMSList1"
        android:layout_marginBottom="37dp" />

</RelativeLayout>
