<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s"
    tools:context="com.example.goaltechnologies.educationapp.StudentPage">
    <ListView android:id="@+id/SMSList"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:textColor="@android:color/white"
        android:cacheColorHint="@android:color/background_light"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/SMSList"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/SMSList"
        android:layout_marginEnd="14dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button8"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="55dp" />
</RelativeLayout>
