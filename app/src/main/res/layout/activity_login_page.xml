<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c"
    tools:context="com.example.goaltechnologies.educationapp.LoginPage">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/colorwhite"
        android:textColorHint="@color/colorwhite"
        android:fontFamily="serif"
        android:hint="ex: abc@gmail.com"
        android:layout_above="@+id/editText6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <TextView
        android:text="Login Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/textView6"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:textColor="@color/colorwhite"

        android:textColorHint="@color/colorwhite"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText6"
        android:hint="Password"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@color/colorwhite"
        android:textColorHint="@color/colorwhite"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/editText5" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_alignEnd="@+id/editText6"
        android:textStyle="normal|bold"
        android:id="@+id/button3" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textStyle="normal|bold"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />
    <RadioGroup
        android:id="@+id/radiotype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText6"
        android:layout_alignStart="@+id/button3">
        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"

            android:text="Student"
            android:layout_below="@+id/editText6"
            android:layout_alignStart="@+id/button2" />


        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignStart="@+id/radioSex"
            android:layout_below="@+id/editText6"
            android:layout_marginTop="13dp"
            android:text="Employee" />
    </RadioGroup>

</RelativeLayout>
